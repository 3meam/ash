{
  "name": "ash-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "ASH (Anti-tamper Security Hash) Monorepo",
  "author": "3meam Co. | شركة عمائم",
  "license": "MIT",
  "workspaces": [
    "packages/ash-node",
    "packages/ash-wasm",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:wasm && npm run build:node",
    "build:wasm": "cd packages/ash-wasm && wasm-pack build --target web",
    "build:node": "cd packages/ash-node && npm run build",
    "build:rust": "cargo build --release",
    "test": "npm run test:rust && npm run test:node",
    "test:rust": "cargo test",
    "test:node": "cd packages/ash-node && npm test",
    "test:php": "cd packages/ash-php && composer test",
    "lint": "npm run lint:rust && npm run lint:node",
    "lint:rust": "cargo clippy -- -D warnings",
    "lint:node": "cd packages/ash-node && npm run lint",
    "clean": "cargo clean && rm -rf packages/*/dist packages/*/node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
