{
  "name": "@3maem/ash-node",
  "version": "2.1.0",
  "description": "ASH SDK for Node.js - Request integrity and anti-replay protection library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./middleware": {
      "require": "./dist/middleware/index.js",
      "import": "./dist/middleware/index.mjs",
      "types": "./dist/middleware/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/middleware/index.ts --format cjs,esm --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ash",
    "security",
    "integrity",
    "anti-tamper",
    "replay-prevention",
    "cryptography",
    "middleware"
  ],
  "author": "3meam Co. | شركة عمائم",
  "license": "Proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/3meam/ash.git",
    "directory": "packages/ash-node"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@3maem/ash-wasm": "file:../ash-wasm/pkg"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "express": "^4.18.2",
    "fastify": "^4.24.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "express": "^4.0.0 || ^5.0.0",
    "fastify": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    }
  }
}
